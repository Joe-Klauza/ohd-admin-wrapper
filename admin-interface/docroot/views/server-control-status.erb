<div class="d-flex justify-content-start horizontal-expand bg-light m-1">
  <small class="ml-4 p-2 col-4 bg-info text-center"><%= @config['server-config-name'] %> (<%= @config['server_name'] %>)</small>
  <div class="ml-4 p-2 col-1"><span id="server-status" class="monospace-font horizontal-expand text-center badge badge-<%= @server_status == 'OFF' ? 'danger' : 'success' %>"><%= @server_status %></span></div>
  <div class="ml-4 p-2 col">
    <div class="p-2 col-3 d-flex flex-column" style="font-size: 80%">
      <span id="config-id" style="display: none;"><%= @id %></span>
      <div style="white-space: pre;">Game Port: <span id="game-port"><%= @game_port %></span></div>
      <div style="white-space: pre;">Query Port: <span id="query-port"><%= @query_port %></span></div>
      <div style="white-space: pre;">RCON Port: <span id="rcon-port"><%= @rcon_port %></span></div>
    </div>
    <div id="threads" class="p-2 col justify-content-center d-flex flex-column" style="font-size: 75%"><%= erb :threads %></div>
  </div>
</div>
